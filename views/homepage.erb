<% if session[:user_id] %>
<% user = @users_table.find(session[:user_id])["username"] %>
<!--if logged in-->


  <!--Userpage... User is signed in-->

  <div class="userpage_search">
    <form action="">
      <input class="input_home_main" id="search" type="text" name="search">
      <input type="submit" value="Search">
    </form>
  </div>

  <div class="userpage_categories">
    <select name="Categories">
      <option value="" disabled="disabled" selected="selected">Categories</option>
      <option value="value1">Value 1</option>
      <option value="value2">Value 2</option>
    </select>
  </div>

  <div class="userpage_welcome">
  <h1 class="greeting">Welcome, <%= user.capitalize %></h1>
  </div>

  <br>


  <!--signed in homepage 1/4 squares-->

    <% posts.each do |user_post| %>
    <a href="/view_post/<%= user_post["p_id"] %>">
      <article class="one_fourth">
        <div class="square_img">
        <img src="<%= user_post["image"] %>" />
        </div>
        <div class="fourth_discript">
        <p><%= user_post["description"] %></p>
        </div>
      </article>
    </a>
    <% end %>




<% else %>
<!--else not logged in-->

    <!--Homepage Main-->
    <article class="full_column">
      <div class="homepage_main">

        <h1>Looking For <br> Typography Inspiration?</h1>
        <h2>Find it here! Or, <a href = "http://www.webpage.com">post</a> your own!</h2>

        <form action="">
          <input class="input_home_main" id="search" type="text" name="search">
          <input type="submit" value="Search">
        </form>

      </div>
    </article>

    <!--Homepage 1/4 squares-->
  <% posts.each do |post| %>
    <article class="one_fourth">
      <div class="square_img">
        <img src="<%= post["image"] %>" />
      </div>
      <div class="fourth_discript">
        <p><%= post["description"] %></p>
      </div>
    </article>
  <% end %>



<% end %> <!--end user session-->